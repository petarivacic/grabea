- provide(:title, @user.full_name)
.row
  %aside.span4
    =render 'users/user_info'
    =render 'users/tagline'
   
    %section
      = render 'shared/stats'
    %section
      %strong Skills:
      %div
        = render @skills
  %bside.span8
    .tabbable
      / Only required for left/right tabs
      %ul.nav.nav-pills
        %li.active
          %a{"data-toggle" => "tab", :href => "#tab1"} Activity(#{@user.microposts.count})
        %li
          %a{"data-toggle" => "tab", :href => "#tab2"} Background
            

      .tab-content
        #tab1.tab-pane.active
          - if @user.microposts.any?
            %ol.microposts
              = render @microposts
            = will_paginate @microposts    
        #tab2.tab-pane
          %bio
          %strong Bio:
          .bio= @user.bio
          
          %hr/
          
          %education
            %strong Education:
            %div= render @educations
          %hr/
          
          %experience 
            %strong Experience:
            %ul= render @experiences

