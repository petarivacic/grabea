<% @posts.each do |post| %>
  <div class="row">
    <div class="span 1">
      <div style=" ">
      <%= image_tag post.user.gravatar_url, style: "width: 50px; height: 50px;",  class: "img-rounded"  %>
    </div>
  </div>

    <div class="span 5">
      <strong><%= post.user.full_name %></strong>
      <p><%= post.content %></p>
      
      <div class="meta">
        <p class="small">
      <%= link_to time_ago_in_words(post.created_at) + " ago", post %>
    </p>
      </div>
    </div>
</div>

<hr>

<% end %>
