<% @posts.each do |post| %>

<div class="row">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  
    <div class="span1 container">
      <%= image_tag post.user.gravatar_url, style: "width: 50px; height: 50px;",  class: "img-rounded"  %>
    </div>
  
  <div class"container">
    <div class="row">
      <div class="span7">
      <strong><%= post.user.full_name %></strong>
    <%= link_to time_ago_in_words(post.created_at) + " ago", post, class:"small" %>
    <p><%= post.content %></p>
    </div>
    </div>
  </div>
  
  </div>
  <hr>

<% end %>
