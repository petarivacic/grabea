.feed_item.row
  %span.feed_item_photo
    = image_tag feed_item.user.gravatar_url, style: "width: 50px; height: 50px;",  class: "img-rounded"
  %strong.feed_item_title
    %span
      = link_to feed_item.user.full_name, feed_item.user
    %span
      posted new idea
    %span
      = feed_item.name
    %spanPosted Posted #{time_ago_in_words(feed_item.created_at)} ago.
  %span.row.feed_item_content
    %span= feed_item.content
    %span
      (More)
  %span.row.feed_item_actions
    %span
      = link_to "Like(#{feed_item.likes.size})", {:controller =>"microposts", :action => "upvote", :id => feed_item.id}, method: :put
    %span
      • 
    %span
      = link_to "Dislike(#{feed_item.dislikes.size})", {:controller =>"microposts", :action => "downvote", :id => feed_item.id},  method: :put
    %span
      • 
    %span
      %a Comment
    %span
      • 
    %span
      %a Share
    